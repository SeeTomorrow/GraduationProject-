<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dz.bestnew.mapper.myMapper.MyUserExtentMapper">
    <resultMap id="BaseResultMap" type="com.dz.bestnew.po.myPOJO.UserExtent">
        <id column="user_id" jdbcType="INTEGER" property="userId" />
        <id column="extent_id" jdbcType="INTEGER" property="roleId" />
    </resultMap>
    <sql id="Base_Column_List">
    user_id, extent_id
  </sql>
    <select id="selectExtentByRole" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from user_role
        join role_extent
        on  user_role.role_id=role_extent.role_id
    </select>

</mapper>